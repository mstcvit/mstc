    <div class="row bar">
        <div class="col-12">
            <p class="text-center heading-inverse">
                OUR BLOG
            </p>
        </div>
    </div>
    <div class="row bar">

        <div class="card-deck">

            <!--Will use fetched data here instead of for-loop in prod-->
            <!--Can also create a similar data template for teams section which gets data from a View-Model-->
            @for (int i = 0; i < 4; i++)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6">
                    <div class="card">
                        <img class="card-img-top img-fluid" src="https://dummyimage.com/250x250/000/fff">
                        <div class="card-body">
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <button type="button" class="btn btn-outline-light btn-lg" id="blogbtn">See more</button>
